#include<bits/stdc++.h>
using namespace std;
int lar(int arr[],int n,int k)
{ 
	priority_queue<int,vector<int>,greater<int>>minheap;           //minheap mai sabse chota element top pr hota h
	for(int i=0 ; i<k ; i++)
		{
			minheap.push(arr[i]);
		}
	for(int i=k ; i<n ; i++)
		{
			if(arr[i]>minheap.top())
			{
				 minheap.pop();
				minheap.push(arr[i]);
			}
		}
	return minheap.top();
}
int main()
{
	int arr[]={6,5,2,12,15,18};
	int n=6;
	int k=3;
  cout<<lar(arr,n,k);
	return 0;
}


time=O(K)
